# microservice specific routes

->          /hmrc-frontend                               hmrcfrontend.Routes

GET         /                                            controllers.IndexController.onPageLoad(returnId: Option[String] ?= None)

GET         /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

GET         /language/:lang                              controllers.LanguageSwitchController.switchToLanguage(lang: String)

GET         /refresh-session                             controllers.KeepAliveController.keepAlive()

GET         /there-is-a-problem                          controllers.JourneyRecoveryController.onPageLoad(continueUrl: Option[RedirectUrl] ?= None)

GET         /preliminary-questions/check-answers                          controllers.preliminary.CheckYourAnswersController.onPageLoad()
POST        /preliminary-questions/check-answers                          controllers.preliminary.CheckYourAnswersController.onSubmit()

GET         /account/sign-out-survey                     controllers.auth.AuthController.signOut()
GET         /account/sign-out                            controllers.auth.AuthController.signOutNoSurvey()
GET         /account/signed-out                          controllers.auth.SignedOutController.onPageLoad()

GET         /unauthorised                                controllers.UnauthorisedController.onPageLoad()

GET        /preliminary-questions/purchaser-name                        controllers.preliminary.PurchaserSurnameOrCompanyNameController.onPageLoad(mode: Mode = NormalMode)
POST       /preliminary-questions/purchaser-name                        controllers.preliminary.PurchaserSurnameOrCompanyNameController.onSubmit(mode: Mode = NormalMode)
GET        /preliminary-questions/purchaser-name/change                 controllers.preliminary.PurchaserSurnameOrCompanyNameController.onPageLoad(mode: Mode = CheckMode)
POST       /preliminary-questions/purchaser-name/change                 controllers.preliminary.PurchaserSurnameOrCompanyNameController.onSubmit(mode: Mode = CheckMode)

GET        /preliminary-questions/who-is-making-the-purchase            controllers.preliminary.PurchaserIsIndividualController.onPageLoad(mode: Mode = NormalMode)
POST       /preliminary-questions/who-is-making-the-purchase            controllers.preliminary.PurchaserIsIndividualController.onSubmit(mode: Mode = NormalMode)
GET        /change/preliminary-questions/who-is-making-the-purchase     controllers.preliminary.PurchaserIsIndividualController.onPageLoad(mode: Mode = CheckMode)
POST       /change/preliminary-questions/who-is-making-the-purchase     controllers.preliminary.PurchaserIsIndividualController.onSubmit(mode: Mode = CheckMode)

GET        /returnTaskList                       controllers.ReturnTaskListController.onPageLoad(returnId: Option[String] ?= None)

GET        /preliminary-questions/before-you-start                       controllers.preliminary.BeforeStartReturnController.onPageLoad()

GET        /preliminary-questions/transaction-type                       controllers.preliminary.TransactionTypeController.onPageLoad(mode: Mode = NormalMode)
POST       /preliminary-questions/transaction-type                       controllers.preliminary.TransactionTypeController.onSubmit(mode: Mode = NormalMode)
GET        /change/preliminary-questions/transaction-type                controllers.preliminary.TransactionTypeController.onPageLoad(mode: Mode = CheckMode)
POST       /change/preliminary-questions/transaction-type                controllers.preliminary.TransactionTypeController.onSubmit(mode: Mode = CheckMode)


GET         /preliminary-questions/address                          controllers.preliminary.PrelimAddressController.redirectToAddressLookup(mode: Mode = NormalMode, changeRoute: Option[String] ?= None)
GET         /preliminary-questions/address-return                   controllers.preliminary.PrelimAddressController.addressLookupCallback(id: String ?= "", mode: Mode = NormalMode)
GET         /preliminary-questions/address-return/change            controllers.preliminary.PrelimAddressController.addressLookupCallbackChange(id: String ?= "", mode: Mode = NormalMode)

GET        /about-the-vendor/agent-name                             controllers.AgentNameController.onPageLoad(mode: Mode = NormalMode)
POST       /about-the-vendor/agent-name                             controllers.AgentNameController.onSubmit(mode: Mode = NormalMode)
GET        /change/about-the-vendor/agent-name                      controllers.AgentNameController.onPageLoad(mode: Mode = CheckMode)
POST       /change/about-the-vendor/agent-name                      controllers.AgentNameController.onSubmit(mode: Mode = CheckMode)
